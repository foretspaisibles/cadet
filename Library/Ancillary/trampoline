export MAKEFLAGS="-I${PWD}/Library/Make${MAKEFLAGS:+ ${MAKEFLAGS}}"
export REPOSITORY="svn://Llea.celt.neu/workshop/bhrid"
export BHRIDBASEDIR="${PWD}"

if [ "$OSTYPE" = 'darwin' ]; then
    export TEXDEVICE='pdf'
elif [ "$1" = 'final' ]; then
    export TEXDEVICE='ps pdf dvi'
else
    export TEXDEVICE='dvi'
fi

if ! [ "$1" = 'final' ]; then
    export DRAFT='yes'
fi

exec ${SHELL:-/bin/sh}

### End of file `trampoline'
