Input_encoding: utf8
Drivers_support: xdvi, pdf, ps
Locales_support:
 fr_FR, de_DE, en_GB,
 fr_CA, fr_CH, fr_BE,
 de_CH, de_AT,
 en_CA, en_US, en_NZ

Setup_locale: fr_FR
Setup_paper: A4
Setup_margin: 25mm, 25mm

Format_version: @version@

# The format using a Times font, is named London to honour the
# London city, where Times New Roman designer Victor Lardent worked.

Fontes_support: fonttx, fonteufm
Format_name: London
Format: london


# The format using a Palatino-style font is named Darmstadt to honour
# the home city of Hermann Zapf, designer of Palatino.

Fontes_support: fontpx, fonteufm
Format_name: Darmstadt
Format: darmstadt


# The format using a Latin Modern font, is named Stanford to honour
# the Stanford university, where Latin Modern designer Donald
# Knuth worked.

Fontes_support: fontlm, fonteufm
Format_name: Stanford
Format: stanford

### End of file `format.spec'
